    <link rel="stylesheet" href="/css/styles.css">

    <title>Chat-APP</title>
</head>
<body>
 
    <div class=".container-fluid">
        <div class="row">
            <div class="col-12 pb-5" id="chat-area">
                
            </div>
            <div class="col-10 col-md-11 col-lg-11 p-2" id="msg-area">
                <input type="text" class="form-input" id="chat-msg" placeholder="Enter your message">
            </div>
            <div class="col-2 col-md-1 col-lg-1 p-2">
                <button class="send-msg"><i class="fa-solid fa-paper-plane"></i></button>
            </div>
        </div>
    </div>
    <!-- Socket.io client connection -->
    <script src="/socket.io/socket.io.js"></script>
